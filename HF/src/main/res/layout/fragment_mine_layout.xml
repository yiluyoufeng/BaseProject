<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/lin_root"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/home_my_rl_title"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/icon_default_header" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_head"
                android:layout_centerHorizontal="true"
                android:text="AHF"
                android:layout_marginTop="5dp"
                android:textColor="@color/white" />


        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/home_my_tv_clear"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/home_my_clear"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/icon_select_item_right"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="清理缓存"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/font_size_2" />

                <View
                    style="@style/dividerStyle"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin" />


                <TextView
                    android:id="@+id/home_my_tv_about"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/home_my_about"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/icon_select_item_right"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/font_size_2"
                    android:text="关于我们" />


                <View
                    style="@style/dividerStyle"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin" />


            </LinearLayout>


        </ScrollView>


    </LinearLayout>
</LinearLayout>
